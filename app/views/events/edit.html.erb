<div class="container">
	<div class="container-fluid events-list">
	<%= form_for @event, :url => { :action => "update" } do |f| %> 
		<div class="form-group row">
            <label class="col-sm-2 form-control-label">Name</label>
            <div class="col-sm-10">
                <%= f.text_field :name, :class => "form-control" %>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 form-control-label">Url image</label>
            <div class="col-sm-10">
                <%= f.text_field :hero_image_url, :class => "form-control" %>
            </div>
        </div>
        
        <div class="form-group row">
            <label class="col-sm-2 form-control-label">Venue</label>
            <div class="col-sm-10">
                <input class="form-control" type="text" value="<%= @venue_event.full_address %>" name="event[venue]" id="event_venue">
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 form-control-label">Catelogy</label>
            <div class="col-sm-10">
			    <select name="event[category]" id="option" class="form-control">
			    	<% if @category_event.id == 1 %>
			    		<option value="1">Entertainment</option>
						<option value="2">Learning</option>
						<option value="3">Everything Else</option>
			    	<% elsif @category_event.id == 2 %>
						<option value="2">Learning</option>
				    	<option value="1">Entertainment</option>
						<option value="3">Everything Else</option>
			    	<% else %>
						<option value="3">Everything Else</option>
				    	<option value="1">Entertainment</option>
			    		<option value="2">Learning</option>
			    	<% end %>			    	
				</select>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 form-control-label">Start date</label>
            <div class="col-sm-10">
                <%= f.date_field :starts_at, :class => "form-control" %>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 form-control-label">End date</label>
            <div class="col-sm-10">
                <%= f.date_field :ends_at, :class => "form-control" %>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 form-control-label">Description</label>
            <div class="col-sm-10">
                <%= f.text_area :extended_html_description, :class => "form-control" %>
            </div>
        </div>
        <div class="form-group row">
	        <div class="col-sm-offset-2 col-sm-10">
	          <input class="btn btn-success" type="submit" name="commit" value="Update Event">
	        </div>
	      </div>
	<% end %>
	</div>
</div>