<div class="container">
<div class="container-fluid events-list">
	<h1>New event</h1>

	<%= simple_form_for @event do |f| %>
		<%= f.input :name %>
		<%= f.input :starts_at %>
		<%= f.input :ends_at %>
		<%= f.input :venue_id do %>
		  <%= f.select :venue_id, options_from_collection_for_select(Venue.all, :id, :full_address), {}, {class: 'form-control'} %>
		<% end %>
		<%= f.input :category_id do %>
		  	<%= f.select :category_id, options_from_collection_for_select(Category.all, :id, :name), {}, {class: 'form-control'} %>
		<% end %>
		<%= f.input :hero_image_url %>
		<%= f.input :extended_html_description %>
		
		<%= f.submit %>
	<% end %>

</div></div>